<UserControl x:Class="BreakingNews.Imaging.FlipTileTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignWidth="336" d:DesignHeight="336">

    <Grid x:Name="LayoutRoot" Width="336" Height="336">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="97" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="97" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Margin="19,19,0,0">
            <TextBlock x:Name="txtContent" Style="{StaticResource PhoneTextExtraLargeStyle}" Foreground="#FFFFFFFF" Margin="0,0,0,0" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>